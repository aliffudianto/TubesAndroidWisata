<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ritz">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/oke1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ritz1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:maxLines="3"
        android:padding="8dp"
        android:text="Ritz Charlton"
        android:textColor="#222"
        android:textSize="22dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/isi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:maxLines="8"
        android:padding="8dp"
        android:text="Ritz-Carlton adalah sebuah merek hotel dan resor mewah dengan 70 properti yang terletak di kota-kota besar dan tempat resor eksklusif di 23 negara di seluruh dunia. Merek The Ritz-Carlton dikelola oleh Ritz-Carlton Hotel Company LLC, sebuah anak perusahaan dari Marriott International"
        android:textColor="#666"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnritz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi"
        android:layout_centerHorizontal="true"
        android:text="Cek Rute"/>



</RelativeLayout>